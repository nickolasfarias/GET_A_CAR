<div class="card-bg">
  <div class="card-image"></div>
  <div>
    <p>Porsche GT2RS 2020</p>
    <p>$714</p>
  </div>
</div>




<div class="cards">
  <% @cars.each do |car| %>
    <div class="card-trip">
      <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
      <div class="card-trip-infos">
        <div>
          <h2><%= car.model %></h2>
          <p><%= car.description %></p>
        </div>
        <h2 class="card-trip-pricing">$<%= car.price %></h2>
        <%= cl_image_tag car.user.photo.key, class: "card-trip-user avatar-bordered", crop: :fill %>
      </div>
    </div>
  <% end %>
</div>
