
<div class="banner" style="background-image: url(<%= asset_url('Banner.png')%>);">
  <div class="container">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cars.each do |car| %>
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
          <div>
            <h2><%= car.model %></h2>
            <p><%= car.description %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= car.price %></h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
