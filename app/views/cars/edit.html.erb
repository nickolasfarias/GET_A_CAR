<div class="container my-3 justify-content-center">
  <div class="row">
    <div class="col-6 m-auto">
      <h1>Update your car</h1>
      <%= simple_form_for(@car) do |f| %>
        <%= f.input :model %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.input :fuel, collection: ["Gasoline", "Premium Gasoline", "Electric"] %>
        <%= f.input :consumption %>
        <%= f.input :seats, collection: [2, 5, 7]%>
        <%= f.input :doors, collection: [2, 4] %>
        <%= f.input :description %>
        <%= f.input :address, collection: ["GaleÃ£o airport", "Santos Dummont airport", "Barra shopping"] %>
        <div class="col-4 m-auto">
          <%= f.submit class: "btn btn-primary btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
